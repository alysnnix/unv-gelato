{
  "name": "unv-gelato",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:presentation\"",
    "dev:presentation": "vite --config vite.config.ts",
    "dev:server": "nodemon --exec bun run src/infrastructure/server.ts",
    "clean": "rimraf dist public cloud",
    "build": "npm run clean && npm run build:presentation && npm run build:server && npm run post-build",
    "build:presentation": "vite build",
    "build:server": "tsc",
    "post-build": "mkdir -p public && cp -R dist/presentation/* public/ && mkdir -p cloud && cp dist/infrastructure/cloud/main.js cloud/main.js",
    "lint": "eslint .",
    "start": "bun run dist/infrastructure/server.js"
  },
  "dependencies": {
    "@sendgrid/mail": "7.7.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.3.3",
    "aws-sdk": "2.1390.0",
    "body-parser": "1.20.2",
    "braintree": "3.16.0",
    "cookie-parser": "1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "4.1.1",
    "dotenv": "^16.3.1",
    "ejs": "3.1.9",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.0",
    "mailgun-js": "0.22.0",
    "mandrill-api": "1.0.45",
    "mercadopago": "1.5.16",
    "method-override": "3.0.0",
    "moment": "2.29.4",
    "mongodb": "^6.3.0",
    "numeral": "2.0.6",
    "parse": "^6.1.1",
    "plivo": "4.49.0",
    "pug": "2.0.4",
    "pusher": "5.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.3",
    "stripe": "12.8.0",
    "tailwindcss": "^4.1.13",
    "twilio": "4.11.2",
    "underscore": "1.13.6",
    "xlsx": "0.18.5",
    "parse-cache": "0.0.13",
    "parse-dashboard": "^7.4.0",
    "parse-express-cookie-session": "0.0.3",
    "parse-express-https-redirect": "0.0.1",
    "parse-image": "0.3.0",
    "parse-server": "^6.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/parse": "^3.0.9",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "mkdirp": "^3.0.1",
    "nodemon": "^3.0.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7"
  }
}