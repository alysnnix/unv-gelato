{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": [
    "src/infrastructure/cloud/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/presentation",
    "src/server.ts",
    "src/dash.ts"
  ]
}